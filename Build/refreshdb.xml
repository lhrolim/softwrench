<?xml version="1.0" encoding="utf-8"?>

<project name="drop-database" default="exec">
  <property name="dev_pr" value="Provider=SQLOLEDB;Data Source=10.50.100.125;Initial Catalog=SWDB_pr;User Id=sw;password=softwrench;" />
  <property name="dev_pr2" value="Provider=SQLOLEDB;Data Source=10.50.100.125;Initial Catalog=SWDB_pr2;User Id=sw;password=softwrench;" />
  <property name="dev_pr3" value="Provider=SQLOLEDB;Data Source=10.50.100.125;Initial Catalog=SWDB_pr3;User Id=sw;password=softwrench;" />
  <property name="dev_pr4" value="Provider=SQLOLEDB;Data Source=10.50.100.125;Initial Catalog=SWDB_pr4;User Id=sw;password=softwrench;" />
  <property name="droptables" value="../Build/rmtables.sql" />

  <if test="${environment::variable-exists('image')}">
    <property name="image" value="${environment::get-variable('image')}" />
  </if>


  <target name="exec">
    <if test="${image != 'dev_prdb2'}">
      <loadtasks assembly="../Build/NAntContribTask/NAnt.Contrib.Tasks.dll" />
      <echo message="* Connecting to ${property::get-value(property::get-value('image'))}"/>
      <sql  connstring="${property::get-value(property::get-value('image'))}"
            delimiter="go"
            delimstyle="Line"
            batch="false"
            source="${droptables}"
          >
      </sql>
    </if>
  </target>

 

</project>
