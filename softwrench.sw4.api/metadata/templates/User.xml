  <applications>
    <application name="user" title="User" entity="User">
      <schemas>
        <schema id="list" stereotype="list" title="User List">
          <field attribute="username" label="Username"/>
          <field attribute="#firstName" label="First Name"/>
          <field attribute="#lastName" label="Last Name"/>
          <field attribute="isActive" label="Active"/>
