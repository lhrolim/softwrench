@using DocumentFormat.OpenXml.Wordprocessing
@using softWrench.sW4.Web.Controllers
@using Styles = System.Web.Optimization.Styles
@model softWrench.sW4.Web.Models.LoginHandler.LoginHandlerModel

@{
    ViewBag.Title = "Sign In | softWrench";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <link rel="Shortcut Icon" href="favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <link rel="icon" sizes="196x196" href="apple-touch-icon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrap/css/twitter-bootstrap")
    @Styles.Render("~/Content/themes/base/font-awesome")
    @Styles.Render("~/Content/themes/base/fonts")
    @Styles.Render("~/Content/styles/client/client-css")
    @Scripts.Render("~/Content/Scripts/modernizr")
</head>
<body class="page-signin">
    @Scripts.Render("~/Content/Scripts/jquery/jquery")
    @Scripts.Render("~/Content/Scripts/twitter-bootstrap")
    @Scripts.Render("~/Content/Scripts/angular/angular")
    @Scripts.Render("~/Content/Scripts/client/application")
    @Scripts.Render("~/Content/Scripts/client/signin")

    <div class="container">
        <div class="shadow">
            <div class="form-signin">
                <div class="row text-center">
                    <div class="col-sm-offset-1 col-sm-10">
                        @if (System.IO.File.Exists(Request.MapPath("~/Content/Images/" + @Model.ClientName + "/logo-main.png"))) {
                            <img class="logo" src="~/Content/Images/@Model.ClientName/logo-main.png">
                        } else if (System.IO.File.Exists(Request.MapPath("~/Content/Customers/" + @Model.ClientName + "/images/logo-main.png")))
                        {
                            <img class="logo" src="~/Content/Customers/@Model.ClientName/images/logo-main.png">
                        }
                        else {
                            <img class="logo" src="~/Content/Images/logo-main.png">
                        }
                    </div>
                </div>
                <div class="row branding"></div>
                <div class="row divider top"></div>
                @if (!Model.IsLoginEnabled) {

                    <div class="row index-form-row">
                        <div class="serviceItLoginWarning" style="margin-bottom: 2em">
                            @Model.LoginMessage
                        </div>
                    </div>
                }

                @if (Model.IsLoginEnabled) {
                    <div class="row">
                        <form class="col-sm-offset-1 col-sm-10" role="form" action="@Request.RawUrl" method="post" name="value">
                            @if (Model.IncorrectLogin) {
                                if (string.IsNullOrEmpty(Model.LoginMessage)) {

                                    <div class="text-danger" style="margin-bottom: 2em">Your <strong>User Name</strong> or <strong>Password</strong> was entered incorrectly.</div>
                                } else {
                                    var message = Model.LoginMessage.Split('\n');
                                    var count = Convert.ToInt32(message.Count());
                                    var i = 1;
                                    foreach (var m in message) {
                                        var styleMessage = i == count ? "margin-bottom: 2em" : string.Empty;

                                        <div class="text-danger" style="@styleMessage; margin-right: 250px;">@m</div>
                                        i++;
                                    }
                                }
                            }
                            
                            
                            
                            //else if (Model.Inactivity) {
                                @*<script>*@
                                  @*  $(document).ready(function () {
                                        alert('Logged out \n');
                                    });
                                </script>*@
                          @*  }*@
                            
                            
                            
                             
                            else if (Model.Forbidden) {
                                <script>
                                    $(document).ready(function () {
                                        alert("You do not have permission to use this application. Please contact your System Administrator.");
                                    });
                                </script>
                            }
                            <div class="row">
                                <div class="col-sm-6">
                                    <input id="userName" name="userName" type="text" class="form-control" placeholder="Username" autocapitalize="off" autocorrect="off" autofocus>
                                    <div id="userNameMessage" class="alert alert-warning hapag-login-validation" style="display: none;">
                                        Username is required<br />

                                    </div>
                                    <input id="password" type="password" name="password" class="form-control" placeholder="Password">
                                    <div id="passwordMessage" class="alert alert-warning hapag-login-validation" style="display: none;">
                                        Password is required<br />

                                    </div>
                                    <input id="userTimezoneOffset" type="hidden" name="userTimezoneOffset" />
                                </div>
                                <div class="user-links col-sm-6">
                                    @if (@Model.ClientName == "demo")
                                    {
                                        <div>
                                            Use the following credentials to login:<br>
                                            End User: <b>enduser\password</b><br>
                                            Supervisor: <b>supervisor\password</b><br>
                                            Administrator: <b>administrator\password</b>
                                        </div>
                                    }
                                    else
                                    {
                                        @*<div>
                                            <a href="">Forgot Password?</a><br />
                                            <a href="">Register Now</a>
                                        </div>*@
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <button class="btn col-sm-2" type="submit" id="btnLogin"><span class="glyphicon glyphicon-log-in "></span>&emsp;Login</button>
                            </div>
                        </form>
                    </div>
                    <div class="row divider bottom"></div>
                    <div class="row text-center">
                        <div class="col-sm-offset-1 col-sm-10">
                            @if (System.IO.File.Exists(Request.MapPath("~/Content/Images/" + @Model.ClientName + "/logo-byline.png")))
                            {
                                <img class="cts-name" src="~/Content/Images/@Model.ClientName/logo-byline.png">
                            }
                            else if (System.IO.File.Exists(Request.MapPath("~/Content/Customers/" + @Model.ClientName + "/images/logo-byline.png")))
                            {
                                <img class="cts-name" src="~/Content/Customers/@Model.ClientName/images/logo-byline.png">
                            }
                            else
                            {
                                <img class="cts-name" src="~/Content/Images/logo-byline.png">
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
