<?xml version="1.0" encoding="utf-8" ?>
<metadata xmlns="http://www.controltechnologysolutions.com/metadata">

  <applications>


    <application entity="Role" name="Role" title="Roles">
      <schemas>
        <list>
          <field label="Name" attribute="name" />
          <field label="Description" attribute="description" />
        </list>
      </schemas>

    </application>


    <application entity="UserProfile" name="UserProfile" title="Security Groups">
      <schemas>
        <list>
          <field label="Name" attribute="name" />
          <field label="Description" attribute="description" />
          <commandbars>
            <commandgroup position="gridtop">
              <command id="new" icon="fa-plus"
                       service="redirectService" method="goToApplicationView" parameters="_UserProfile,detail" label="New Security Group" tooltip="New Security Group" position="left"/>
            </commandgroup>
          </commandbars>
        </list>
        <detail>

          <commandbars>
            <commandgroup position="actions">
              <container label="Actions" id="actioncontainer" icon="fa-bolt">
                <command label="Batch Update" tooltip="make modifications to several applications all in once" id="batchupdate" service="userProfileService" method="batchUpdate"/>
                <command label="Apply to Users" tooltip="Apply the current profile to multiple user accounts at once" id="applymultiple" service="userProfileService" method="applyMultiple"/>
              </container>
            </commandgroup>
            <commandgroup id="#detailform">
              <removecommand id="print"/>
              <command id="save" service="userProfileService" method="save"/>
            </commandgroup>
          </commandbars>

          <section orientation="horizontal">
            <field label="Name" attribute="name" requiredexpression="true"/>
            <field label="Description" attribute="description" requiredexpression="true"/>
          </section>
          <tab label="Extra Permissions" id="basicroles">
            <composition detailschema="" fetchtype="eager"  relationship="#basicroles"  printschema="" inline="true">
              <collectionproperties allowcreation="false" listschema="rolerepresentation"/>
            </composition>
          </tab>

          <!-- Application and basic setup  -->
          <section orientation="horizontal">
            <optionfield attribute="application" providerattribute="topLevelApplications" label="Application">
              <event type="afterchange" service="userProfileService" method="onApplicationChange"/>
              <event type="beforechange" service="userProfileService" method="beforeApplicationChange"/>
            </optionfield>

            <field attribute="#appallowcreation" label="Allow Creation" showexpression="@hasCreationSchema==true">
              <renderer type="checkbox"/>
            </field>
            <field attribute="#appallowupdate" label="Allow Update">
              <renderer type="checkbox"/>
            </field>
            <field attribute="#appallowviewonly" label="Allow Only Visualization">
              <renderer type="checkbox"/>
            </field>

          </section>



          <section showexpression="@application!=null">
            <!-- Mode/Schema/Tab selection  -->
            <section orientation="horizontal">
              <optionfield label="Mode" attribute="selectedmode" providerattribute="selectableModes" dependantfields="application">
                <renderer type="combo" params="optionfield.forcefirstoption=true"/>
                <event type="afterchange" service="userProfileService" method="afterModeChanged"/>
              </optionfield>
              <optionfield label="Schema" attribute="schema" providerattribute="schemas" dependantfields="application,selectedmode" showexpression="@showschemacombo" >
                <renderer type="combo" params="donotignoreeventsifhidden=true"/>
                <event type="providerloaded" service="userProfileService" method="afterSchemaListLoaded"/>
                <event type="afterchange" service="userProfileService" method="afterSchemaChanged"/>
                <event type="beforechange" service="userProfileService" method="beforeSchemaChange"/>
              </optionfield>
              <optionfield label="Tab/Table" attribute="#selectedtab" providerattribute="selectableTabs" dependantfields="selectedmode,schema" showexpression="@showtabscombo">
                <renderer type="combo" params="donotignoreeventsifhidden=true;optionfield.forcefirstoption=true"/>
                <event type="providerloaded" service="userProfileService" method="afterTabsLoaded"/>
                <event type="afterchange" service="userProfileService" method="tabvaluechanged"/>
                <event type="beforechange" service="userProfileService" method="beforeTabChange"/>
              </optionfield>
            </section>

            <!-- Composition selection  -->
            <section showexpression="@iscompositiontab" orientation="horizontal">
              <field attribute="#compallowcreation" label="Allow Creation">
                <renderer type="checkbox"/>
              </field>
              <field attribute="#compallowupdate" label="Allow Update">
                <renderer type="checkbox"/>
              </field>
              <field attribute="#compallowviewonly" label="Allow Visualization">
                <renderer type="checkbox"/>
              </field>
            </section>

            <!-- Fields and Action selection  -->
            <section orientation="horizontal">

              <composition detailschema="" fetchtype="lazy"  relationship="#fieldPermissions"  printschema="" inline="true">
                <collectionproperties allowcreation="false" listschema="fieldRepresentation"/>
              </composition>

              <composition detailschema="" fetchtype="lazy"  relationship="#actionPermissions"  printschema="" inline="true">
                <collectionproperties allowcreation="false" listschema="actionRepresentation"/>
              </composition>
            </section>

          </section>

          <event type="onschemafullyloaded" method="onSchemaLoad" service="userProfileService"/>
        </detail>

        <schema id="rolerepresentation" stereotype="list.selection">
          <field hidden="true" attribute="id"/>
          <field label="Name" attribute="name" />
          <field label="Description" attribute="description" />
          <properties>
            <property key="list.paginationsize" value="10"/>
            <property key="list.paginationoptions" value="10"/>
          </properties>
        </schema>

        <schema id="fieldRepresentation" stereotype="list">
          <event type="onload" service="userProfileService" method="availableFieldsRefreshed"/>
          <field hidden="true" attribute="fieldKey"/>
          <field label="Field" attribute="#label" />
          <optionfield attribute="permission" label="Permission">
            <option label="Full Control" value="fullcontrol"/>
            <option label="None" value="none"/>
            <option label="Read Only" value="readonly"/>
          </optionfield>
          <properties>
            <property key="list.paginationsize" value="10"/>
            <property key="list.paginationoptions" value="10"/>
          </properties>
        </schema>

        <schema id="actionRepresentation" stereotype="list.selection" >
          <event type="onload" service="userProfileService" method="availableActionsRefreshed"/>
          <field hidden="true" attribute="actionid"/>
          <field label="Action" attribute="#actionlabel" />
        </schema>

        <schema id="batchupdate" stereotype="detail.modal">
          <field attribute="profileid" hidden="true"/>
          <optionfield attribute="applications" providerattribute="topLevelApplications" label="Application">
            <renderer type="combo" params="multiple=true"/>
          </optionfield>
          <field attribute="allowcreation" label="Allow Creation">
            <renderer type="checkbox"/>
          </field>
          <field attribute="allowupdate" label="Allow Update">
            <renderer type="checkbox"/>
          </field>
          <field attribute="allowviewonly" label="Allow Only Visualization">
            <renderer type="checkbox"/>
          </field>
        </schema>
      </schemas>

    </application>

  </applications>




</metadata>
