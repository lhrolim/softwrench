  <stereotype id="detail.modal">
    <property key="show.printcommand" value="editonly"/>
    <property key="commandbar.bottom" value="modal.detail.primary"/>
    <property key="toolbar.detail.secondary" value="none"/>
    <property key="actions" value="none"/>
  </stereotype>

  <stereotype id="detail.modal.confirm">
    <property key="commandbar.bottom" value="modal.detail.confirm"/>
    <property key="toolbar.detail.secondary" value="none"/>
