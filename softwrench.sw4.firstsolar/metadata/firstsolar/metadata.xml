<?xml version="1.0" encoding="utf-8" ?>
<metadata xmlns="http://www.controltechnologysolutions.com/metadata">

  <templates>
    <template path="@person.xml"/>
    <template path="@workorder.xml"/>
    <template path="@location.xml"/>
  </templates>



  <applications>
    <application name="workorder" title="Work Order" entity="workorder" role="workorders">
      <schemas>
        <list redeclaring="false">
          <filters>
            <!--<modalfilter attribute="location" targetschema="location.locationfilter" service="locationFilterService.operate"></modalfilter>-->
            <optionfilter attribute="location" displaycode="true" advancedfilterschema="location.locationfilter" allowblank="true"/>
          </filters>
        </list>
      </schemas>
    </application>

    <application name="location" title="Location" entity="location" >
      <schemas>
        <schema id="locationfilter" stereotype="list">
          <field attribute="location" label="Location"/>
          <field attribute="description" label="Description"/>
          <properties>
            <property key="commandbar.bottom" value="gridfilterbottom"/>
            <property key="commandbar.top" value="gridfiltertop"/>
            <property key="list.selectionstyle" value="multiple"/>
            <property key="list.paginationsize" value="10"/>
            <property key="list.disabledetails" value="true"/>
          </properties>
        </schema>
        <!--<schema id="locationfilter" stereotype="detail">
          <field attribute="location" label="Location"/>
          <properties>
            <property key="commandbar.bottom" value="detailfilter"/>
          </properties>
        </schema>-->
        <schema id="list"  redeclaring="false" stereotype="list.selection">
          <properties>
            <property key="list.selectionmodebydefault" value="true" />
          </properties>
        </schema>
      </schemas>
    </application>
  </applications>

</metadata>